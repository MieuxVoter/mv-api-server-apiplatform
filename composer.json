{
    "type": "project",
    "name": "mieuxvoter/mv-api-server-apiplatform",
    "description": "Majority Judgment OpenAPI Server ApiPlatform.  Host public and private polls using Majority Judgment.",
    "license": "AGPL-3.0-or-later",
    "require": {
        "php": "^7.1.3",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-mysqlnd": "*",
        "ext-sqlite3": "*",
        "ext-xml": "*",
        "api-platform/api-pack": "1.3.*",
        "api-platform/core": "2.5.*",
        "lexik/jwt-authentication-bundle": "^2.8",
        "matthewbaggett/clamp": "^1.1",
        "mieuxvoter/mj-library-php": "@dev",
        "ramsey/uuid": "^3 || ^4",
        "ramsey/uuid-doctrine": "1.5.*",
        "sensio/framework-extra-bundle": "5.3.*",
        "stof/doctrine-extensions-bundle": "1.5.*",
        "symfony/console": "4.4.*",
        "symfony/dotenv": "4.4.*",
        "symfony/flex": "^1.9.10",
        "symfony/form": "4.4.*",
        "symfony/framework-bundle": "4.4.*",
        "symfony/messenger": "4.4.*",
        "symfony/templating": "4.4.*",
        "symfony/twig-bundle": "4.4.*",
        "symfony/validator": "4.4.*",
        "symfony/yaml": "4.4.*"
    },
    "require-dev": {
        "behat/behat": "^3.7",
        "behat/symfony2-extension": "2.1.*",
        "behatch/contexts": "^3.3",
        "daraeman/wordtonumber": "dev-i18n-french",
        "doctrine/doctrine-fixtures-bundle": "3.1.*",
        "elkan/behatformatter": "dev-mj",
        "liip/functional-test-bundle": "~2.0@alpha",
        "nelmio/api-doc-bundle": "3.4.*",
        "phpunit/phpunit": "7.5.*",
        "softonic/graphql-client": "1.2.*",
        "symfony/debug-bundle": "4.4.*",
        "symfony/maker-bundle": "^1.13",
        "symfony/monolog-bundle": "^3.4",
        "symfony/profiler-pack": "^1.0",
        "symfony/var-dumper": "4.4.*",
        "symfony/web-server-bundle": "4.4.*"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/domi41/WordToNumber.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/domi41/behatformatter.git"
        }
    ],
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "4.4.*"
        }
    }
}
